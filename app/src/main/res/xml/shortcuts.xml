<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <capability android:name="actions.intent.CREATE_NOTE">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="me.milk717.rubatomanager"
            android:targetClass="me.milk717.rubatomanager.MainActivity">

            <parameter
                android:name="note.text"
                android:key="text" />

            <url-template android:value="rubatomanager://memo?text={text}" />
        </intent>
    </capability>

</shortcuts>